<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="#ffffff" android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/LinearLayoutHeader"
        android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ImageView"
            android:adjustViewBounds="true" android:scaleType="fitXY"
            android:src="@drawable/ic_action_name" android:layout_margin="5dip"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/PlanTitle"
            android:layout_gravity="center" android:layout_margin="5dip"
            android:textSize="26dip" android:text="Product name"
            android:textColor="#000000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content" android:textColor="#000000"
            android:layout_margin="5dip"
            android:layout_height="wrap_content" android:text="Travelmate name: "/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/TravleMateName"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rateTravelmate" android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5" android:progressTint="#666699"
        android:stepSize="0.5" />

    <TextView
        android:layout_width="wrap_content" android:text="Addtional Comment : "
        android:layout_height="wrap_content" android:textColor="#000000" />
    <EditText android:id="@+id/comment"
        android:layout_width="match_parent" android:hint="Comment"
        android:layout_height="wrap_content" android:gravity="top"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:textColor="#000000" />


    <Button android:id="@+id/SubmitFeedback" android:background="#666699"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:text="Submit Feedback"/>

</LinearLayout>