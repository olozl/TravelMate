<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ffffff">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="Sub-Product Catalog"
        android:textColor="#000000"
        android:textSize="24dip"></TextView>

    <ListView
        android:id="@+id/ListViewCatalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:cacheColorHint="#ffffff"
        android:clickable="true"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button android:layout_width="wrap_content"
         android:layout_height="wrap_content" android:layout_margin="5dip"
         android:layout_gravity="left" android:id="@+id/ListCatalog"
         android:text="Back to City List"></Button>
    <Button android:layout_width="wrap_content"
         android:layout_height="wrap_content" android:layout_margin="5dip"
         android:layout_gravity="right" android:id="@+id/ButtonViewCart"
         android:text="View Shopping Cart"></Button>
    </LinearLayout>
</LinearLayout>